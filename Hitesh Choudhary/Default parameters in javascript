<script>
let sayHello = function(name){
    document.write("Greeting massage for user");
    document.write(` hye  ${name}`);

}

sayHello('Yasin');

let fullNameMaker = function(firstName,LastName){
      document.write('<br>');
      document.write('Wealcome');
      document.write(` happy to have you ${firstName},${LastName}`);
      document.write('<br>');

}
fullNameMaker('Yasin','Arif')

let myAdder = function(num1,num2){
  return  num1+num2;
}
document.write(myAdder(5,4));

document.write('<br>');
let multi=function(num3,num4){
  return num3*num4
}
document.write(multi(5,4));
document.write('<br>');


let myMark = function(name='unName',mark=0){
  return 'Hi '+name+' Your Obtain Marks is : '+mark;

}
document.write(myMark('yasin',80));


</script>
