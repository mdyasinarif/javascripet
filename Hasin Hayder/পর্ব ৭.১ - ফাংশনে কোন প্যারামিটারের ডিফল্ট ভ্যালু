function revisedString(data){
  var  revisedString = data.split("").reverse("").join("");
  return revisedString;
}
var sentence = "I am Yasin";
document.write(sentence);
document.write("<br />");

var revisedSentence = revisedString(sentence);
document.write(revisedSentence);// function pass kora varibale call kor ta hoba
document.write("<br />");

var sentence2 = "I am Arif";
document.write(sentence2);
document.write("<br />");

var revisedSentence2 = revisedString(sentence2);
document.write(revisedSentence2);

</script>
