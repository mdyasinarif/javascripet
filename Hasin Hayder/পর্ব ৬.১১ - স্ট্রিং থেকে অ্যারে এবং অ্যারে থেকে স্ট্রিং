<script type="text/javascript">
var a = "My Name is Yasin Arif"

var s = a.split(" ");
document.write("Split  :"+s);
document.write("<br />");

var as = s.join("*");
document.write("Join  :"+as);
document.write("<br />");
document.write("I am a boy".split(" ").join("*"));
document.write("<br />");

var rev = a.split("").reverse("").join("");
document.write(rev);

</script>
